<?xml version="1.0" encoding="utf-8"?>
<com.look.yx.look.widget.ElasticDragDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draggable_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dragDismissDistance="@dimen/drag_dismiss_distance"
    app:dragDismissScale="0.95"
    tools:context=".activity.ZhihuDescribeActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nev_item"
        android:transitionGroup="false"
        android:transitionName="@string/transition_shot_background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.look.yx.look.widget.ParallaxScrimageView
                android:id="@+id/shot"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:foreground="@drawable/mid_grey_ripple"
                android:minHeight="168dp"
                android:stateListAnimator="@animator/app_bar_pin"
                android:transitionName="@string/transition_shot"
                app:maxScrimAlpha="0.4"
                app:parallaxFactor="-0.5"
                app:scrimAlpha="0"
                app:scrimColor="@color/scrim"/>

            <com.look.yx.look.widget.TranslateYTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="40dp"
                android:stateListAnimator="@animator/app_bar_pin"
                android:textColor="@color/text_primary_light"
                android:textSize="23sp"
                app:maxScrimAlpha="0.4"
                app:parallaxFactor="-0.5"
                app:scrimAlpha="0"
                app:scrimColor="@color/scrim"
                />

        </FrameLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:outlineProvider="none"
            android:elevation="1dp"
            android:background="#3b000000"
            style="@style/Widget.Look.HomeToolbar"
            app:title="@string/zhihu"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="260dp"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/wv_zhihu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/nev_item"/>

                <!--解决nestView无法滑倒低端-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/background_light"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

</com.look.yx.look.widget.ElasticDragDismissFrameLayout>